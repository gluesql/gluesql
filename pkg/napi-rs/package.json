{
  "name": "gluesql-napi",
  "version": "0.17.0",
  "description": "GlueSQL is quite sticky, it attaches to anywhere - NAPI-RS bindings",
  "main": "index.js",
  "browser": "browser.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluesql/gluesql.git"
  },
  "keywords": [
    "SQL",
    "Database",
    "rust",
    "napi-rs",
    "webassembly",
    "wasm"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gluesql/gluesql/issues"
  },
  "homepage": "https://gluesql.org/docs",
  "files": [
    "index.d.ts",
    "index.js",
    "browser.js"
  ],
  "napi": {
    "binaryName": "gluesql-napi",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-apple-darwin",
      "wasm32-wasip1-threads"
    ],
    "wasm": {
      "initialMemory": 16777216,
      "maximumMemory": 2147483648,
      "needsPatchWasmJs": true
    }
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "test": "vitest",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "build:wasm": "napi build --platform --target wasm32-wasip1-threads --release",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "oxlint .",
    "prepublishOnly": "napi prepublish -t npm",
    "preversion": "napi build --platform && git add .",
    "version": "napi version"
  },
  "devDependencies": {
    "@emnapi/core": "^1.5.0",
    "@emnapi/runtime": "^1.5.0",
    "@napi-rs/cli": "^3.2.0",
    "@napi-rs/wasm-runtime": "^0.2.0",
    "@oxc-node/core": "^0.0.32",
    "@taplo/cli": "^0.7.0",
    "@tybys/wasm-util": "^0.10.0",
    "chalk": "^5.6.2",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.14.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "oxlint --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|md|json)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ]
  }
}
